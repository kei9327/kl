<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!--타이틀 영영-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#A0C81E"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/icon_setting_youtube"
            android:text="@string/opencourse"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_setting_close"/>
    </LinearLayout>
    <!--타이틀 영영-->

    <!--제목 입력 영역-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject"
            android:textSize="16dp"
            android:textColor="#8a8a8a"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/opencourse_title"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:paddingLeft="5dp"
            android:textColor="#797979"
            android:textSize="20dp"
            android:background="#ededed"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/export_default_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>
    </LinearLayout>
