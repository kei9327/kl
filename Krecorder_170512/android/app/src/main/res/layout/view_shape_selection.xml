<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/groupButtons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <RadioButton
            android:id="@+id/btnCircle"
            android:layout_width="@dimen/w_general_button_size"
            android:layout_height="@dimen/w_general_button_size"
            android:background="@drawable/selector_btn_selected"
            android:button="@drawable/btn_shape_circle"
            android:tag="@integer/shape_circle"
            />
        <RadioButton
            android:id="@+id/btnTriangle"
            android:layout_width="@dimen/w_general_button_size"
            android:layout_height="@dimen/w_general_button_size"
            android:layout_marginLeft="@dimen/w_general_btn_left_margin"
            android:background="@drawable/selector_btn_selected"
            android:button="@drawable/btn_shape_triangle"
            android:tag="@integer/shape_triangle"
            />
        <RadioButton
            android:id="@+id/btnRectangle"
            android:layout_width="@dimen/w_general_button_size"
            android:layout_height="@dimen/w_general_button_size"
            android:layout_marginLeft="@dimen/w_general_btn_left_margin"
            android:background="@drawable/selector_btn_selected"
            android:button="@drawable/btn_shape_square"
            android:tag="@integer/shape_rectangle"
            />
        <RadioButton
            android:id="@+id/btnStar"
            android:layout_width="@dimen/w_general_button_size"
            android:layout_height="@dimen/w_general_button_size"
            android:layout_marginLeft="@dimen/w_general_btn_left_margin"
            android:background="@drawable/selector_btn_selected"
            android:button="@drawable/btn_shape_star"
            android:visibility="gone"
            android:tag="@integer/shape_star"
            />
        <RadioButton
            android:id="@+id/btnStraight"
            android:layout_width="@dimen/w_general_button_size"
            android:layout_height="@dimen/w_general_button_size"
            android:layout_marginLeft="@dimen/w_general_btn_left_margin"
            android:background="@drawable/selector_btn_selected"
            android:button="@drawable/btn_shape_line"
            android:visibility="gone"
            android:tag="@integer/shape_straight"
            />
        <RadioButton
            android:id="@+id/btnArrow"
            android:layout_width="@dimen/w_general_button_size"
            android:layout_height="@dimen/w_general_button_size"
            android:layout_marginLeft="@dimen/w_general_btn_left_margin"
            android:background="@drawable/selector_btn_selected"
            android:button="@drawable/btn_shape_arrow"
            android:visibility="gone"
            android:tag="@integer/shape_arrow"
            />
    </RadioGroup>

    <com.knowrecorder.Widgets.RadioButtonGroupTableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">
        <TableRow>
            <RadioButton
                android:id="@+id/btnColor1"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_color_01"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@color/color1"
                />
            <RadioButton
                android:id="@+id/btnColor2"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_color_02"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@color/color2"
                />
            <RadioButton
                android:id="@+id/btnColor3"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_color_03"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@color/color3"
                />

            <RadioButton
                android:id="@+id/btnColor7"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:background="@drawable/btn_color_07"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@android:color/white"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="8dp">
            <RadioButton
                android:id="@+id/btnColor4"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_color_04"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@color/color4"
                />
            <RadioButton
                android:id="@+id/btnColor5"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_color_05"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@color/color5"
                />
            <RadioButton
                android:id="@+id/btnColor6"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_color_06"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@color/color6"
                />
            <RadioButton
                android:id="@+id/btnColor8"
                android:layout_width="@dimen/w_smaller_button_size"
                android:layout_height="@dimen/w_smaller_button_size"
                android:background="@drawable/btn_color_08"
                android:button="@drawable/selector_btn_color_selected"
                android:tag="@android:color/black"
                />
        </TableRow>

    </com.knowrecorder.Widgets.RadioButtonGroupTableLayout>

</LinearLayout>