<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD337">

    <android.support.v4.view.ViewPager
        android:id="@+id/sg_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:layout_margin="1dp"
        android:background="#FFFFFF"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <TextView
            android:id="@+id/sg_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="guide 1"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/sg_page_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_pagecontrol_s"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/sg_page_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_pagecontrol"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/sg_page_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_pagecontrol"/>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>