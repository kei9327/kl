<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guidePage1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="960dp"
                android:textStyle="normal"
                android:textSize="32dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:maxWidth="960dp"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginBottom="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circle1"
                android:src="@drawable/ico_pagecontrol_s"
                android:layout_marginRight="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circle2"
                android:src="@drawable/ico_pagecontrol"
                android:layout_marginRight="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circle3"
                android:src="@drawable/ico_pagecontrol"/>
        </LinearLayout>

        <Button
            android:id="@+id/get_started_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_guide_get_started_btn1"
            android:text="@string/guide_start_btn"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="startMainActivity"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
</LinearLayout>