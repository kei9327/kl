<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:paddingTop="16dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <FrameLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/p_op_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/thumbnail_border"
            android:src = "@drawable/img_list_default_01"
            android:padding="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:background="#000000"
            android:gravity="center_vertical"
            android:layout_gravity="bottom|right">
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ico_leftmenu_recorded"
                />
            <TextView
                android:id="@+id/p_op_play_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:text="4:35"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/test"
        android:orientation="horizontal"
        android:background="@drawable/thumbnail_border_info"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/p_op_user_thumbnail"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/p_op_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textSize="15dp"
                android:text="테스트 플레이어2"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/p_op_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textColor="#646464"
                    android:text="bluesjazz11"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ico_viewer_view"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/p_op_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="145"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>