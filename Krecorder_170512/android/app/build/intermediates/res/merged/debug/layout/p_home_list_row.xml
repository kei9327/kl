<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/p_opencourse_section_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/p_opencourse_more_btn"
            android:text="Sample title"
            android:textColor="#505050"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/p_opencourse_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:text="more"
            android:textSize="14dp"
            android:textColor="#787878"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/p_opencourse_horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="24dp"/>

    <View
        android:id="@+id/p_opencourse_home_list_diviter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"/>


</LinearLayout>