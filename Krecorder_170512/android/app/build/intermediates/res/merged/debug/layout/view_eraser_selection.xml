<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="198dp"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    >

    <com.knowrecorder.Widgets.StrokePreview
        android:id="@+id/vStrokePreview"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_preview"
        />

    <SeekBar
        android:id="@+id/sbEraserWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:minHeight="3dp"
        android:maxHeight="3dp"
        android:max="16"
        android:progressDrawable="@drawable/seekbar_layout"
        android:thumb="@drawable/seekbar_circle"
        android:thumbOffset="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/btn_pen_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/btn_eraser_clear"/>

        <ImageView
            android:id="@+id/btn_all_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="4dp"
            android:src="@drawable/btn_eraser_clearall"/>
    </LinearLayout>
</LinearLayout>