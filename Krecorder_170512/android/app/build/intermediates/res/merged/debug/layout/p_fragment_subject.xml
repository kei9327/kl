<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/p_op_btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_top_back"/>
            <TextView
                android:id="@+id/p_op_menu_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#505050"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <ImageView
                android:id="@+id/p_op_btn_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_top_sort"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/p_op_video_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:id="@+id/no_search_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:visibility="gone"
                android:gravity="center">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img_sort_no_search"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="220dp"
                    android:textSize="17dp"
                    android:textColor="#a0a0a0"
                    android:layout_marginBottom="8dp"
                    android:text="@string/i_searchtips"/>
                <TextView
                    android:id="@+id/search_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="220dp"
                    android:textSize="13dp"
                    android:textColor="#a0a0a0"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
             <ProgressBar
                 android:id="@+id/subject_progress"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/p_op_sort_search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="49dp"
        android:background="#33000000"/>
    <LinearLayout
        android:id="@+id/select_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#505050"
                android:text="@string/s_subject" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="18dp"
                    android:textColor="#96c81e"
                    android:text="@string/m_subject"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="17dp"
                            android:textColor="#646464"
                            android:text="@string/opencourse_menu_math"
                            android:id="@+id/textView3" />

                        <ImageView
                            android:id="@+id/p_op_menu_math"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/btn_subjects_math"
                            android:background="@drawable/bg_p_op_video_thumbnail_border1_radius"
                            android:padding="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="17dp"
                            android:textColor="#646464"
                            android:text="@string/opencourse_menu_science"/>
                        <ImageView
                            android:id="@+id/p_op_menu_science"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/btn_subjects_science"
                            android:background="@drawable/bg_p_op_video_thumbnail_border1_radius"
                            android:padding="3dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="17dp"
                            android:textColor="#646464"
                            android:text="@string/opencourse_menu_language"/>
                        <ImageView
                            android:id="@+id/p_op_menu_language"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/btn_subjects_language"
                            android:background="@drawable/bg_p_op_video_thumbnail_border1_radius"
                            android:padding="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="17dp"
                            android:textColor="#646464"
                            android:text="@string/opencourse_menu_social"
                            android:id="@+id/textView" />
                        <ImageView
                            android:id="@+id/p_op_menu_social"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/btn_subjects_social"
                            android:background="@drawable/bg_p_op_video_thumbnail_border1_radius"
                            android:padding="3dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textSize="17dp"
                        android:textColor="#646464"
                        android:text="@string/opencourse_menu_art"/>
                    <ImageView
                        android:id="@+id/p_op_menu_art"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/btn_subjects_art"
                        android:background="@drawable/bg_p_op_video_thumbnail_border1_radius"
                        android:padding="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textSize="17dp"
                        android:textColor="#646464"
                        android:text="@string/opencourse_menu_others"/>
                    <ImageView
                        android:id="@+id/p_op_menu_others"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/btn_subjects_others"
                        android:background="@drawable/bg_p_op_video_thumbnail_border1_radius"
                        android:padding="3dp"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>