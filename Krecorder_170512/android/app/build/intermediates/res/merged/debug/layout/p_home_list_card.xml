<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingRight="12dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/thumbnail_border"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/p_opencourse_item_thumbnail"
            android:layout_width="130dp"
            android:layout_height="97dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_list_default_01"/>
    </LinearLayout>
    <TextView
        android:id="@+id/p_opencourse_item_title"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#787878"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="When I find myself in the moon"/>

</LinearLayout>