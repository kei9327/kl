<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@drawable/user_list_title_style">
    <TextView
        android:id="@+id/user_list_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:textSize="12dp"
        android:textColor="#636363"
        android:paddingLeft="20dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_rightmenu_attendees"/>
    <TextView
        android:id="@+id/class_user_list_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:text="6"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_rightmenu_notattendees"/>

    <TextView
        android:id="@+id/other_user_list_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:text="3"/>

    <ImageView
        android:id="@+id/btn_user_list_fold"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_userlist_categoryfold"/>


</LinearLayout>