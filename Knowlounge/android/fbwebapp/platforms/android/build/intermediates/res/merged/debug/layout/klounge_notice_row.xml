<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="20dp">
    <ImageView
        android:id="@+id/delete_check_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src ="@drawable/btn_checkbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/noti_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_under_gray_background_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notice_thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_checkbox_on"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="참여 요청을 하였습니다.아녕하세요 아ㅏ어리누누판우린어ㅏ린얼미휴ㅜㄴ이뮤ㅜㅏㄴ웊니아ㅟㄴ아ㅜ린ㅇ러ㅣ나러ㅣㄴㅇ런이ㅠㅓㄴ이ㅠㅟㄴ우ㅠㄴ이ㅏㅓㄹ내ㅑㅓㄱ대휴ㅜㅎ만ㅀ"
                android:textColor="#3c3c3c"
                android:ellipsize="end"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/notice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어제 PM 03:11"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:textColor="#969696"/>
        </LinearLayout>
        <TextView
            android:id="@+id/notice_direct"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="@string/noti_shortcut"
            android:gravity="center"
            android:visibility="gone"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/bg_direct_btn"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#00aad2"/>
    </LinearLayout>
    <View
        android:id="@+id/extra_margin"
        android:layout_width="20dp"
        android:layout_height="match_parent"/>
</LinearLayout>