<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:background="#FAFAFA"
        android:paddingRight="4dp"
        android:splitMotionEvents="false">
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/class_right_slide_menu_userlist"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_rightdrawer_userlist_on"/>
            <TextView
                android:id="@+id/class_right_slide_menu_userlist_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/class_right_slide_menu_invite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_rightdrawer_invite_on"/>
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/class_right_slide_menu_community"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_rightdrawer_chat_on"/>
            <TextView
                android:id="@+id/class_right_slide_menu_community_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/class_right_slide_menu_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_rightdrawer_comment_on"/>
            <TextView
                android:id="@+id/class_right_slide_menu_comment_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/class_right_slide_menu_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_rightmenu_close"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <FrameLayout
        android:id="@+id/class_right_slide_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
    </FrameLayout>

</LinearLayout>