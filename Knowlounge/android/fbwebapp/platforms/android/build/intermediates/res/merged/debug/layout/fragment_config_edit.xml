<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="right"
        android:background="@color/main_left_title_bg_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_config_edit_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src ="@drawable/btn_canvas_left_back"/>
        <TextView
            android:id="@+id/config_edit_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textColor="@color/main_left_title_font_color"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_left_title_under_line"/>

    <TextView
        android:id="@+id/config_edit_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="13dp"
        android:textColor="#969696"
        android:background="#00000000"
        android:text=""/>

    <EditText
        android:id="@+id/config_edit_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/bg_rounded_edit"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="#505050"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:gravity="right">
        <TextView
            android:id="@+id/config_edit_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/btn_big_green_rounded"
            android:textColor="#ffffff"
            android:text="@string/global_ok"/>
    </LinearLayout>

</LinearLayout>