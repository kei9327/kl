
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/main_left_title_bg_color"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_room_setting_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_menu_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="@string/canvas_inform"
            android:textColor="@color/main_left_title_font_color"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_under_gray_background_f5f5f5"
                android:textColor="#969696"
                android:textSize="13dp"
                android:paddingLeft="20dp"
                android:text="@string/canvas_setting_class"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_under_gray_background_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/canvas_setting_classtitle"/>

                <LinearLayout
                    android:id="@+id/class_setting_class_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:id="@+id/class_setting_class_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/app_base_color"
                        android:text="test" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/class_setting_class_title_next_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_list_nextarrow" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">

                <LinearLayout
                    android:id="@+id/class_setting_class_desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="#505050"
                        android:paddingTop="15dp"
                        android:text="@string/canvas_setting_descrpt"/>
                    <TextView
                        android:id="@+id/class_setting_class_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/app_base_color"
                        android:hint="@string/canvas_setting_descrptguide"
                        android:textColorHint="#969696"
                        android:text="test" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/class_setting_class_desc_next_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_list_nextarrow"/>

            </LinearLayout>


            <!-- 참여인원 항목 레이아웃 : start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_under_gray_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/canvas_setting_number"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txt_class_setting_participant_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="3People"
                        android:textColor="@color/app_base_color"
                        android:textSize="13dp"/>
                    <!-- 25명 버튼 레이아웃 : start -->
                    <LinearLayout
                        android:id="@+id/class_setting_participant_limit_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_radius15_bgcolor_ffffff_border_41e169"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/btn_setting_openlevel"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/app_base_color"
                            android:textSize="13dp"
                            android:text="30"/>
                    </LinearLayout>
                    <!-- 25명 버튼 레이아웃 : end -->
                </LinearLayout>
                <!--
                <ImageView
                    android:id="@+id/class_setting_participant_limit_next_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_list_nextarrow"/>
                -->
            </LinearLayout>
            <!-- 참여인원 항목 레이아웃 : end -->



            <!-- 비밀번호 사용 레이아웃 : start -->
            <LinearLayout
                android:id="@+id/layout_opt_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="#505050"
                        android:text="@string/canvas_setting_password"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right">
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/ck_passwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:theme="@style/MySwitch"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/class_setting_passwd_openflag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_under_gray_background_white">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/passwd_txt"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/class_setting_pwplaceholder"
                        android:textSize="16dp"
                        app:met_textColorHint="#787878"
                        app:met_textColor="#ff5f55"
                        app:met_minCharacters="4"
                        app:met_maxCharacters="8"
                        app:met_baseColor="@color/app_base_color"
                        app:met_primaryColor="@color/app_base_color"
                        app:met_errorColor="#ff2424"/>
                    <!-- android:background="@drawable/config_password_input" -->

                </LinearLayout>
                <!-- 비밀번호 사용 레이아웃 : end -->

                <!-- 공개범위 항목 레이아웃 : start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_under_gray_background_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="#505050"
                        android:text="@string/setting_class_type"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="right">
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/ck_openflag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:theme="@style/MySwitch" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/class_setting_open_flag_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <TextView
                            android:id="@+id/class_setting_open_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/app_base_color"
                            android:text="test" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/class_setting_open_flag_next_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_list_nextarrow"/>

                </LinearLayout>
                <!-- 공개범위 항목 레이아웃 : end -->

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_under_gray_background_f5f5f5"
                android:textColor="#969696"
                android:textSize="13dp"
                android:paddingLeft="20dp"
                android:text="@string/global_setting"/>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/canvas_setting_coop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="right">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/ck_authtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:theme="@style/MySwitch" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/canvas_setting_chat"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/ck_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/MySwitch"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

            </LinearLayout>







            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/canvas_setting_comment"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/ck_cmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/MySwitch"
                        android:layout_gravity="right|center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/canvas_setting_import"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/ck_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/MySwitch"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/class_setting_camteacheronly"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="right">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/ck_only_teacher_cam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:theme="@style/MySwitch" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_under_gray_background_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#505050"
                    android:text="@string/class_setting_videoteacheronly"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="right">
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/ck_only_teacher_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:theme="@style/MySwitch" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_under_gray_background_f5f5f5"
                android:textColor="#969696"
                android:paddingLeft="20dp"
                android:text="@string/canvas_setting_background"/>
            <LinearLayout
                android:id="@+id/bg_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_set_img1"
                        android:tag="bgimg_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset01" />
                    <ImageButton
                        android:id="@+id/btn_set_img2"
                        android:tag="bgimg_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset02" />
                    <ImageButton
                        android:id="@+id/btn_set_img3"
                        android:tag="bgimg_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset03" />
                    <ImageButton
                        android:id="@+id/btn_set_img4"
                        android:tag="bgimg_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset04" />
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_set_color1"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset05" />
                    <ImageButton
                        android:id="@+id/btn_set_color2"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset06" />
                    <ImageButton
                        android:id="@+id/btn_set_color3"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset07" />
                    <ImageButton
                        android:id="@+id/btn_set_color4"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset08" />
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/btn_set_color5"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset09" />
                    <ImageButton
                        android:id="@+id/btn_set_color6"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset10" />
                    <ImageButton
                        android:id="@+id/btn_set_color7"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="8dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset11"/>
                    <ImageButton
                        android:id="@+id/btn_set_color8"
                        android:tag="bgcolor_set"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@android:color/transparent"
                        android:background="@drawable/btn_setting_bgset12"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_left_title_under_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedfe0"/>
    <Button
        android:id="@+id/btn_room_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/btn_big_green_rounded"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/global_ok"/>
</LinearLayout>

