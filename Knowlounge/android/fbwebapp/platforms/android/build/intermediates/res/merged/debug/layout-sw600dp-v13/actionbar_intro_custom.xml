<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_action_introbar">

    <ImageButton
        android:id="@+id/btn_left_nav_toggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/btn_maintop_leftmenu" />

    <com.knowlounge.customview.CustomSpinner
        android:id="@+id/intro_spinner"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_style">

    </com.knowlounge.customview.CustomSpinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right">

        <LinearLayout
            android:id="@+id/enter_room_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_maintop_direct" />
            <TextView
                android:id="@+id/enter_room_code_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF3C3C3C"
                android:text="@string/global_join_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_actionbar_create_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_maintop_makeroom" />
            <TextView
                android:id="@+id/create_room_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF3C3C3C"
                android:text="@string/global_new"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_actionbar_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alert_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_maintop_alertlist" />
            <TextView
                android:id="@+id/main_badge_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:visibility="gone"
                android:gravity="center"/>
            <TextView
                android:id="@+id/alert_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF3C3C3C"
                android:layout_toRightOf="@+id/alert_img"
                android:text="@string/global_noti"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn_actionbar_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_maintop_userlist" />

            <TextView
                android:id="@+id/invite_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF3C3C3C"
                android:text="@string/global_friend"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>