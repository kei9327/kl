<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/user_list_title_layout"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/user_list_title_style">
        <TextView
            android:id="@+id/user_list_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textSize="12dp"
            android:textColor="#636363"
            android:paddingLeft="20dp"/>

        <ImageView
            android:id="@+id/btn_user_list_fold"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_userlist_categoryfold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/other_user_list_empty"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:maxWidth="280dp"
        android:text="@string/userlist_guide"
        android:gravity="center"
        android:textColor="#a0a0a0"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone"/>
</LinearLayout>