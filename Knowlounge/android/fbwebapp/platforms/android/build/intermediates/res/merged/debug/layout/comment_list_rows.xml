<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_user_thumb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="top"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/comment_user_thumb"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/comment_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="writer"
                    android:textColor="#78AA00"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/comment_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="datetime"
                    android:textColor="#969696"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_alignParentRight="true"
                    android:paddingTop="3dp"
                    android:inputType="text|textMultiLine"
                    android:minLines="2"
                    android:text="content"
                    android:textColor="#505050"
                    android:textSize="14dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/btn_comment_del"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_comment_del" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>