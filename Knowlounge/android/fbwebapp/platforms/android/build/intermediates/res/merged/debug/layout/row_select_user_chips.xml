<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_invite_user_body"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/layout_bg_search_user"
    android:clickable="true">

    <ImageView
        android:id="@+id/select_userthumb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon"/>
    <TextView
        android:id="@+id/select_usernm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:paddingLeft="2dp"
        android:singleLine="true"
        android:textColor="#FF3C3C3C"
        android:textSize="14dp"
        android:text="abcdefghijklmnopqrstuvwxyzabcd"/>

</LinearLayout>
