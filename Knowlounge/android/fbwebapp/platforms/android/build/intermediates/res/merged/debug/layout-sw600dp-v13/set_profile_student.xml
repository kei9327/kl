<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_profile_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_firstprofile_pattern"/>
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp"
        android:text="@string/profile_title_student"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/profile_title_under_line"
        android:layout_width="440dp"
        android:layout_height="3dp"
        android:layout_below="@id/profile_title"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"/>
    <ScrollView
        android:layout_width="440dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_title_under_line"
        android:layout_above="@id/profile_submit_btn"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--user name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_set_profile_item_student"
                android:layout_marginBottom="10dp"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/user_name_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ico_firstprofile_name"/>

                <EditText
                    android:id="@+id/profile_name_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="7"
                    android:textSize="14dp"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:hint="@string/profile_name_guide"
                    android:gravity="center_vertical"
                    android:textColorHint="#55eb7d"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <!--email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_set_profile_item_student"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/email_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ico_firstprofile_email"/>

                <EditText
                    android:id="@+id/profile_id_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="7"
                    android:textSize="14dp"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColorHint="#55eb7d"
                    android:textColor="#ffffff"
                    android:hint="@string/profile_id_empty"/>
            </LinearLayout>
            <!--institution-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_set_profile_item_student"
                android:layout_marginBottom="10dp"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/school_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ico_firstprofile_institution"/>

                <EditText
                    android:id="@+id/profile_school_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="7"
                    android:textSize="14dp"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColorHint="#55eb7d"
                    android:textColor="#ffffff"
                    android:hint="@string/profile_institution_guide"/>


            </LinearLayout>
            <!--grade-->
            <LinearLayout
                android:id="@+id/profile_grade_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_set_profile_item_student"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/grade_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ico_firstprofile_grade"/>

                <TextView
                    android:id="@+id/profile_grade_guide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="#55eb7d"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    />
                <ImageView
                    android:id="@+id/grade_next_arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ico_firstprofile_2depth"/>


            </LinearLayout>
            <!--subject-->
            <LinearLayout
                android:id="@+id/profile_subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_set_profile_item_student"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/subject_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ico_firstprofile_subject"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/subject_guide_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toLeftOf="@+id/subject_next_arrow"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:textColor="#55eb7d"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/subject_selected_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_toLeftOf="@+id/subject_next_arrow"/>
                    <ImageView
                        android:id="@+id/subject_next_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ico_firstprofile_2depth"/>

                </RelativeLayout>

                <!--<com.knowlounge.customview.MultiSpinner-->
                <!--android:id="@+id/profile_subject_multi_spinner"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_weight="7"-->
                <!--android:gravity="center_vertical"/>-->

            </LinearLayout>
            <!--language-->
            <LinearLayout
                android:id="@+id/profile_language_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_set_profile_item_student"
                android:layout_marginBottom="10dp"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/language_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ico_firstprofile_language"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/language_guide_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toLeftOf="@+id/language_next_arrow"
                        android:text="@string/profile_language_guide"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:textColor="#55eb7d"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/language_selected_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_toLeftOf="@+id/language_next_arrow"/>
                    <ImageView
                        android:id="@+id/language_next_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ico_firstprofile_2depth"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/profile_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/bg_set_profile_done"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:textColor="@color/app_base_color"
        android:textSize="18dp"
        android:minWidth="170dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/global_ok"/>

    <TextView
        android:id="@+id/profile_skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:text="@string/profile_skip"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>