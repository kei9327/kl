<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:background="#FFFFFF"
        android:splitMotionEvents="false">
        <FrameLayout
            android:id="@+id/class_right_community_class_chat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/class_right_community_class_chat_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_rightmenu_tap_classchat_on"/>
            <TextView
                android:id="@+id/class_right_community_class_chat_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#787878"/>
        <FrameLayout
            android:id="@+id/class_right_community_chat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/class_right_community_chat_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_rightmenu_tap_boardchat"/>
            <TextView
                android:id="@+id/class_right_community_chat_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>
    <FrameLayout
        android:id="@+id/class_right_community_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
    </FrameLayout>

</LinearLayout>