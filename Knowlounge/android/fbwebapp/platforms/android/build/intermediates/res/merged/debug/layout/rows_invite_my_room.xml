<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/invite_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="73dp"
            android:orientation="vertical"
            android:background="#FFEBECED"
            android:gravity="center">
        <ImageView
            android:id="@+id/my_room_thumb"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/room_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:singleLine="true"
            android:text="밥아저씨"
            android:textColor="#505050"
            android:textSize="16dp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/my_room_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="invite_select"
        android:background="#6464647F"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">


        <ImageView
            android:id="@+id/btn_invite_room_select"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_invite_room_select" />

    </RelativeLayout>

</FrameLayout>