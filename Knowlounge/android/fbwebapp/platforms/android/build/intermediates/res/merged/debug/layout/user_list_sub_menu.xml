<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:background="@drawable/bg_rounded_corner_submenu"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/user_list_submenu_ban"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_list_submenu_ban_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ico_userlist_banned"/>
        <TextView
            android:id="@+id/user_list_submenu_ban_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/userlist_kick"
            android:textColor="#6e7072"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_list_submenu_auth"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_list_submenu_auth_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ico_mainleft_myinfo"/>
        <TextView
            android:id="@+id/user_list_submenu_auth_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Authority"
            android:textColor="#6e7072"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_list_submenu_chat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_list_submenu_chat_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ico_userlist_chat"/>
        <TextView
            android:id="@+id/user_list_submenu_chat_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="1:1 Chat"
            android:textColor="#6e7072"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>