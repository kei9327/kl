                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingLeft="20dp">
                    <LinearLayout
                        android:id="@+id/establish_closed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="20dp"
                        android:background="#ffffff">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/class_setting_pw_dpclass"/>

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_class_openflag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:theme="@style/MySwitch"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#969696"
                    android:background="@drawable/bg_under_and_top_gray_background_f5f5f5"
                    android:text="@string/setting_general"
                    android:id="@+id/textView2" />

                <LinearLayout
                    android:id="@+id/mainleft_setting_profile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_myinfo"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_gray_background_white">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/main_profile"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ico_list_nextarrow"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_mainleft_dropbox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_setting_dropbox"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/setting_dropbox"/>
                        <TextView
                            android:id="@+id/mainleft_dropbox_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical|right"
                            android:textSize="14dp"
                            android:textColor="@color/app_base_color"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#969696"
                    android:background="@drawable/bg_under_and_top_gray_background_f5f5f5"
                    android:text="@string/setting_noti"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_setting_beeper"/>
                    <LinearLayout
                        android:id="@+id/mainleft_beeper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_gray_background_white">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/setting_noti_sound"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ico_list_nextarrow"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_setting_push"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/setting_noti_push"/>

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/mainleft_push_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:theme="@style/MySwitch"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#969696"
                    android:background="@drawable/bg_under_and_top_gray_background_f5f5f5"
                    android:text="@string/setting_inform"/>
                <LinearLayout
                    android:id="@+id/service_access_terms"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingLeft="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_under_gray_background_white">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/setting_inform_service"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ico_list_nextarrow"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/user_info_treaty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_under_gray_background_white">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:textSize="14dp"
                            android:text="@string/setting_inform_privacy"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ico_list_nextarrow"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:background="@drawable/bg_under_gray_background_white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="#505050"
                            android:layout_weight="1"
                            android:textSize="14dp"
                            android:text="@string/setting_inform_version"/>
                        <TextView
                            android:id="@+id/mainleft_setting_ver"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical|right"
                            android:textSize="14dp"
                            android:textColor="@color/app_base_color"
                            android:text="1.2.3"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!-- e : 환경설정 본문 -->

</LinearLayout>