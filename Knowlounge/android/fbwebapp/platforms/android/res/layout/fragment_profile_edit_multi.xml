<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/main_left_title_bg_color"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_mainleft_profile_multi_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src ="@drawable/btn_menu_back"/>
            <TextView
                android:id="@+id/mainleft_profile_multi_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="@color/main_left_title_font_color"
                android:text="사용하는 언어"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_left_title_under_line"/>


    <!-- s : 프로필 멀티 셀렉트 편집 페이지 본문 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <ListView
            android:id="@+id/mainleft_profile_multi_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null">
        </ListView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfe1e3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/mainleft_profile_multi_commit_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@drawable/btn_big_green_rounded"
                android:textColor="#ffffff"
                android:text="@string/global_ok"/>
        </LinearLayout>
    </LinearLayout>
    <!-- e : 프로필 멀티 셀렉트 편집 페이지 본문 -->

</LinearLayout>