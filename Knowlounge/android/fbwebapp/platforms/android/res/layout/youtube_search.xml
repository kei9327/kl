<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/underline_color_aaaaaa"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/youtube_search_ico"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src ="@drawable/ico_popup_video_search"/>

        <EditText
            android:id="@+id/youtube_search_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="input keyword"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/youtube_search_clear_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:src="@drawable/btn_popup_video_search_del"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/youtube_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>