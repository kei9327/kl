<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_corner">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="@string/videosharing_title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c3c3c"
            android:gravity="center"/>
        <TextView
            android:id="@+id/video_share_cancel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:textSize="13dp"
            android:textColor="@color/app_base_color"
            android:layout_marginRight="20dp"
            android:text="@string/global_cancel" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_base_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/underline_color_aaaaaa">
        <LinearLayout
            android:id="@+id/history_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/history_ico"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_popup_video_history_on"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#787878"/>
        <LinearLayout
            android:id="@+id/tutorial_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/tutorial_ico"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_popup_video_guide"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#787878"/>
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/search_ico"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_popup_video_search"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/youtube_search_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/underline_color_aaaaaa"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/youtube_search_ico"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src ="@drawable/ico_popup_video_search"/>

        <EditText
            android:id="@+id/youtube_search_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="@string/videosharing_search"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/youtube_search_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/youtube_search_clear_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:src="@drawable/btn_popup_video_search_del"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/empty_result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/empty_result_img"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginBottom="40dp"
            android:src ="@drawable/thumb_popup_history"/>
        <TextView
            android:id="@+id/empty_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#a0a0a0"
            android:text="검색 결과가 없습니다."/>

    </LinearLayout>
</LinearLayout>