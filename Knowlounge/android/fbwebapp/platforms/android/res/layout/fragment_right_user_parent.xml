<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:background="#FFFFFF"
        android:splitMotionEvents="false">
        <ImageView
            android:id="@+id/class_right_user_list"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/btn_rightmenu_tap_userlist_on"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#787878"/>
        <FrameLayout
            android:id="@+id/class_right_user_noti"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/class_right_user_noti_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_rightmenu_tap_noti"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/class_right_user_noti_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius10_bgcolorff3c3c"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>
    <FrameLayout
        android:id="@+id/class_right_user_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
    </FrameLayout>

</LinearLayout>