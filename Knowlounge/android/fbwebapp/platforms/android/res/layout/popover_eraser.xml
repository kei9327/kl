<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/layout_popover_style"
    android:gravity="center_horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <com.knowlounge.customview.PreviewCanvas
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/eraser_preview"
        android:layout_width="240dp"
        android:layout_height="72dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_preview_eraser"
        custom:previewMode="eraser" />

    <SeekBar
        android:id="@+id/eraser_width_bar"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:max="100"
        android:progress="50"
        android:saveEnabled="true"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/btn_option_slide"
        android:background="@drawable/bg_option_slide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/eraser_undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_rightmenu_undo"/>
        <ImageButton
            android:id="@+id/eraser_redo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_rightmenu_redo"/>
        <ImageButton
            android:id="@+id/eraser_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_rightmenu_trash"/>

    </LinearLayout>

</LinearLayout>