<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/poll_list_check_layout"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/poll_list_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/btn_checkbox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/poll_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#5a5a5a"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="15dp"
                    android:text="1+12"/>
                <ImageView
                    android:id="@+id/ico_list_arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_list_nextarrow"/>
            </LinearLayout>

            <View
                android:id="@+id/poll_list_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="0dp"
                android:background="#dedfe0"/>
        </LinearLayout>
    </LinearLayout>

    <!--
    <View
        android:id="@+id/poll_list_divider"
