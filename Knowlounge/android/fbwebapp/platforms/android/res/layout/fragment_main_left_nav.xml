<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/mainleft_quick_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0"
                    android:orientation="vertical">
                    <!--백버튼 && 설정 버튼-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/btn_leftmenu_back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src ="@drawable/btn_menu_back"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/btn_mainleft_setup"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:src ="@drawable/btn_leftmenu_setting"/>
                    </LinearLayout>

                    <!--사진 유저이름 계정-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/mainleft_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="33dp"
                            android:src="@drawable/btn_checkbox"
                            android:elevation="2dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="6dp"
                                android:paddingRight="20dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/mainleft_login_type"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ico_mainleft_profilefacebook"/>
                                <TextView
                                    android:id="@+id/mainleft_my_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="kwanwoo Nam"
                                    android:textSize="14dp"
                                    android:textColor="#636363"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/mainleft_my_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="20dp"
                                android:text="bluesnow9@gmail.com"
                                android:textColor="#636363"
                                android:textSize="14dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!--스타-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fedd44"
                        android:layout_below="@+id/mainleft_quick_area"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/mainleft_my_star_ico"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ico_mainleft_profile_mystar"/>
                        <TextView
                            android:id="@+id/mainleft_my_star"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp"
                            android:textSize="20dp"
                            android:gravity="center_vertical"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/mainleft_my_star_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:minWidth="100dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/main_recharge"
                            android:textSize="18dp"
                            android:layout_marginRight="3dp"
                            android:textColor="#ffffff"/>
                    </LinearLayout>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_mainleft_home"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_home"
                        android:id="@+id/imageView" />

                    <TextView
                        android:id="@+id/btn_mainleft_home_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/main_home"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:textSize="16dp"
                        android:textColor="#505050"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mainleft_myclass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_myclass"/>
                    <TextView
                        android:id="@+id/btn_mainleft_myclass_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:gravity="center_vertical"
                        android:text="@string/main_myclass"
                        android:textSize="16dp"
                        android:textColor="#505050"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mainleft_friendclass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_friendclass"/>
                    <TextView
                        android:id="@+id/btn_mainleft_friendclass_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:gravity="center_vertical"
                        android:text="@string/main_friends"
                        android:textSize="16dp"
                        android:textColor="#505050"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mainleft_publicclass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_publicclass"/>
                    <TextView
                        android:id="@+id/btn_mainleft_publicclass_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:gravity="center_vertical"
                        android:text="@string/main_public"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_mainleft_schoolclass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_schoolclass"/>
                    <TextView
                        android:id="@+id/btn_mainleft_schoolclass_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/main_school"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#f5f5f5"/>

                <LinearLayout
                    android:id="@+id/btn_mainleft_premium"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_maintop_left_sidemenu_friendclass"/>
                    <TextView
                        android:id="@+id/btn_mainleft_premium_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:text="프리미엄"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mainleft_setting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_setting"/>
                    <TextView
                        android:id="@+id/btn_mainleft_setting_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:text="@string/global_setting"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_mainleft_help"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_help"/>
                    <TextView
                        android:id="@+id/btn_mainleft_help_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:text="@string/main_help"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_mainleft_starshop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_star"/>
                    <TextView
                        android:id="@+id/btn_mainleft_starshop_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:text="@string/global_starshop"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_mainleft_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_myinfo"/>
                    <TextView
                        android:id="@+id/btn_mainleft_myinfo_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:text="@string/main_profile"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_mainleft_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ico_mainleft_logout"/>
                    <TextView
                        android:id="@+id/btn_mainleft_logout_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_under_mainleft_item"
                        android:text="@string/main_signout"
                        android:textSize="16dp"
                        android:textColor="#505050"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>