<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#f5f5f5">


    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_under_line_item">

        <TextView
            android:id="@+id/main_group_item_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Drawing"
            android:textSize="14dp"
            android:textColor="#8c8e90" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MySwitch"
            android:visibility="gone"/>
        <!--
        <ImageView
            android:id="@+id/sub_list_open_btn"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_popover_arrow_down"/>
        -->
    </LinearLayout>
</LinearLayout>