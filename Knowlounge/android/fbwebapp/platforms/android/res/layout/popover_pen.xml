<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/layout_popover_style"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.knowlounge.customview.PreviewCanvas
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pen_preview"
        android:layout_width="240dp"
        android:layout_height="72dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_preview_pen"
        custom:previewMode="pen" />

    <SeekBar
        android:id="@+id/pen_width_bar"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:max="100"
        android:progress="50"
        android:saveEnabled="true"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/btn_option_slide"
        android:background="@drawable/bg_option_slide"/>

    <SeekBar
        android:id="@+id/pen_opacity_bar"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:max="100"
        android:progress="100"
        android:saveEnabled="true"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/btn_option_slide"
        android:background="@drawable/bg_option_slide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pen_color_1"
            android:tag="pen_color_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_option_colorselect"
            android:background="@drawable/btn_option_color01"/>
            />
        <ImageButton
            android:id="@+id/pen_color_2"
            android:tag="pen_color_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color02"/>
        <ImageButton
            android:id="@+id/pen_color_3"
            android:tag="pen_color_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color03"/>
        <ImageButton
            android:id="@+id/pen_color_4"
            android:tag="pen_color_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color04"/>
        <ImageButton
            android:id="@+id/pen_color_5"
            android:tag="pen_color_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color11"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pen_color_6"
            android:tag="pen_color_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_option_color06"/>
        <ImageButton
            android:id="@+id/pen_color_7"
            android:tag="pen_color_7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color07"/>

        <ImageButton
            android:id="@+id/pen_color_8"
            android:tag="pen_color_8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color08"/>

        <ImageButton
            android:id="@+id/pen_color_9"
            android:tag="pen_color_9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color09"/>

        <ImageButton
            android:id="@+id/pen_color_10"
            android:tag="pen_color_10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_option_color12"/>

    </LinearLayout>

</LinearLayout>