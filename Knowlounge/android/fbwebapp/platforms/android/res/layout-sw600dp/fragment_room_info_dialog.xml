<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/bg_rounded_corner"
    android:layout_gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="@string/canvas_sharetools"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c3c3c"
            android:gravity="center"/>
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#8cbd14"
            android:layout_marginRight="20dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_base_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/canvas_title"
            android:textSize="16dp"
            android:textColor="#3c3c3c"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/dialog_room_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:background="@drawable/edit_rounded_corner"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:hint="@string/canvas_edittitle_hint"
            android:textColorHint="#b4b4b4" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/edit_rounded_corner">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dialog_bookmark_layer"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/dialog_bookmark_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/btn_roomtitlemenu_bookmark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#505050"
                        android:text="@string/canvas_bookmark"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c8c8c8"/>

                <LinearLayout
                    android:id="@+id/dialog_import_layer"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/btn_roomtitlemenu_import"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#505050"
                        android:text="@string/canvas_import"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c8c8c8"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dialog_share_layer"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/btn_roomtitlemenu_share"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#505050"
                        android:text="@string/canvas_share"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c8c8c8" />

                <LinearLayout
                    android:id="@+id/dialog_invite_layer"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/btn_roomtitlemenu_invite"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#505050"
                        android:text="@string/invite_btn"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedfe0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:gravity="center_vertical|right"
            android:clickable="true"
            android:textSize="16dp"
            android:textColor="@color/app_base_color"
            android:text="@string/global_ok"/>
    </LinearLayout>

</LinearLayout>