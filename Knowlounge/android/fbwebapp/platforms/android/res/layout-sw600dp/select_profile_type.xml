<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_firstprofile"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_firstprofile"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_start_message1"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_start_message2"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <LinearLayout
                android:id="@+id/profile_select_type_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_student"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_start_student"
                    android:layout_marginBottom="10dp"
                    android:text="@string/profile_start_student"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/btn_teacher"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_below="@+id/btn_student"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_start_teacher"
                    android:text="@string/profile_start_teacher"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="#ffffff"/>
            </LinearLayout>


            <TextView
                android:id="@+id/profile_skip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/app_base_color"
                android:textSize="15dp"
                android:text="@string/profile_skip"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>