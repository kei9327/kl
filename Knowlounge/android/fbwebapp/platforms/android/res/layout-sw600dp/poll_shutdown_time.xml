<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_corner"
    android:layout_gravity="center_vertical|center_horizontal">

    <!--Title 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fafafa"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/shutdown_back_btn"
            android:src="@drawable/btn_poll_back"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/poll_time_title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c3c3c"
            android:gravity="center"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/poll_dialog_title_divider"/>

    <!--Body 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poll_time"
                android:textSize="16dp"
                android:textColor="#3c3c3c"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/type3_check1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type3_check1_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_poll_checkbox_on"/>
                <TextView
                    android:id="@+id/type3_check1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/divider_popup_dialog_item"
                    android:hint="30 초 후에 자동 종료"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:textColor="#5a5a5a"
                    android:textColorHint="#969696" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type3_check2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type3_check2_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_poll_checkbox"/>
                <TextView
                    android:id="@+id/type3_check2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/divider_popup_dialog_item"
                    android:hint="40초 후에 자동 종료"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:textColor="#5a5a5a"
                    android:textColorHint="#969696" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type3_check3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type3_check3_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_poll_checkbox"/>
                <TextView
                    android:id="@+id/type3_check3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/divider_popup_dialog_item"
                    android:hint="50초 후에 자동 종료"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:textColor="#5a5a5a"
                    android:textColorHint="#969696" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type3_check4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type3_check4_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_poll_checkbox"/>
                <TextView
                    android:id="@+id/type3_check4_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/divider_popup_dialog_item"
                    android:hint="60초 후에 자동 종료"
                    android:textSize="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="#5a5a5a"
                    android:textColorHint="#969696" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_opt_time_unlimit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_opt_time_unlimit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_poll_checkbox"/>
                <TextView
                    android:id="@+id/txt_opt_time_unlimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/divider_popup_dialog_item"
                    android:text="@string/poll_time_sel_nolmt"
                    android:textSize="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="#5a5a5a"
                    android:textColorHint="#969696" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type3_check5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type3_check5_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_poll_checkbox"/>
                <TextView
                    android:id="@+id/type3_check5_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:text="@string/poll_time_direct"
                    android:textSize="15dp"
                    android:textColor="#5a5a5a"
                    android:textColorHint="#969696" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_shutdown_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/poll_time_limit"
                    android:textSize="15dp"
                    android:textColor="#3c3c3c"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/shutdown_direct_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/divider_popup_dialog_item"
                    android:inputType="number"
                    android:hint="@string/poll_time_directguide"
                    android:textColorHint="#969696"
                    android:textSize="15dp"
                    android:textColor="#5a5a5a"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 확인 버튼 영역 : start -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/poll_dialog_title_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shutdown_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_poll_dialog_fill_green"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:text="@string/global_ok"/>
    </LinearLayout>
    <!-- 확인 버튼 영역 : end -->

</LinearLayout>